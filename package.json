{
  "name": "discord-bot-boi",
  "version": "1.0.0",
  "description": "Discord Utility Bot",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bdatdo0601/Discord-Bot-Boi.git"
  },
  "author": "Dat Bac Do <dat.b.do@gmail.com>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "^10.12.0"
  },
  "scripts": {
    "lint": "tslint --project .",
    "start": "cross-env DEBUG=BotBoi:* NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "test:specific": "mocha --exit -r ts-node/register -r tsconfig-paths/register --timeout 15000",
    "test:local": "nyc --reporter=html mocha --timeout 15000 --exit -r ts-node/register -r tsconfig-paths/register './test/**/*.test.ts'",
    "test": "nyc --reporter=lcov mocha --timeout 15000 --exit -r ts-node/register -r tsconfig-paths/register './test/**/*.test.ts' && yarn coverage",
    "build-server": "tsc --project ./tsconfig.json",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean": "rm -rf build && mkdir build",
    "build": "yarn clean && yarn build-server",
    "start-production": "cross-env NODE_ENV=production node -r ts-node/register -r tsconfig-paths/register ./build/index.js",
    "deploy": "yarn build && yarn start-production",
    "doc-generate": "typedoc --theme minimal --out ./doc ./src && git subtree push --prefix doc origin gh-pages"
  },
  "pre-commit": [
    "test:local",
    "doc-generate"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/sinon": "^5.0.5",
    "aws-sdk": "^2.343.0",
    "axios": "^0.18.0",
    "debug": "^4.1.0",
    "discord.js": "^11.4.2",
    "dotenv": "^6.0.0",
    "firebase-admin": "^6.1.0",
    "googleapis": "^34.0.0",
    "lodash": "^4.17.10",
    "lolex": "^3.0.0",
    "moment": "^2.22.2",
    "node-wit": "^5.0.0",
    "sinon": "^7.0.0",
    "xml2json": "^0.11.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.1.6",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "^0.0.31",
    "@types/dotenv": "^4.0.3",
    "@types/lodash": "^4.14.117",
    "@types/lolex": "^2.1.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/node-wit": "^4.2.2",
    "@types/xml2json": "^0.10.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-like": "^1.1.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "firebase": "^5.5.7",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.3",
    "nyc": "^13.1.0",
    "pre-commit": "^1.2.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.3"
  },
  "bugs": {
    "url": "https://github.com/bdatdo0601/Discord-Bot-Boi/issues"
  },
  "homepage": "https://github.com/bdatdo0601/Discord-Bot-Boi#readme",
  "directories": {
    "test": "test"
  }
}
